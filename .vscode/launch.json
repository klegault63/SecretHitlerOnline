{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ASP.NET Core App",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0/SecretHitler",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      // "sourceFileMap": {
      //   "/Views": "${workspaceFolder}/Views"
      // }
    }
  ]
}
